<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/top_musicians"
        android:id="@+id/tvTopMusicians"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:textColor="#444444" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="80dp"
        android:id="@+id/ivPreviousMusician"
        android:layout_below="@+id/tvTopMusicians"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/mb_icon_previous_white" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivPreviousMusician"
        android:id="@+id/horizontalScrollView"
        android:layout_below="@+id/tvTopMusicians"
        android:layout_alignParentEnd="false"
        android:layout_toLeftOf="@+id/ivNextMusician">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/tlShowbizs"/>

    </HorizontalScrollView>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="80dp"
        android:id="@+id/ivNextMusician"
        android:src="@drawable/mb_icon_next_white"
        android:layout_below="@+id/tvTopMusicians"
        android:layout_alignParentRight="true" />

</RelativeLayout>