<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlShowbizProfile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rlProfileHeader">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/ivProfile"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignTop="@+id/ivProfile"
            android:layout_toRightOf="@+id/ivProfile"
            android:layout_toEndOf="@+id/ivProfile">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:id="@+id/ivShowbizType"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_megalobiz"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/showbiz_name"
                android:id="@+id/tvName"
                android:maxLength="24"
                android:maxLines="2"
                android:textColor="#158EC6"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/ivShowbizType"
                android:layout_toEndOf="@+id/ivShowbizType"
                android:layout_marginLeft="5dp"
                android:layout_alignTop="@+id/ivShowbizType" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/genre"
                android:id="@+id/tvLabelGenre"
                android:maxLength="24"
                android:maxLines="2"
                android:textColor="#158EC6"
                android:textSize="13sp"
                android:layout_alignLeft="@+id/ivShowbizType"
                android:layout_alignStart="@+id/ivShowbizType"
                android:layout_below="@+id/ivShowbizType"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/owner"
                android:id="@+id/tvLabelOwner"
                android:maxLength="24"
                android:maxLines="2"
                android:textColor="#158EC6"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tvLabelGenre"
                android:layout_alignLeft="@+id/tvLabelGenre"
                android:layout_alignStart="@+id/tvLabelGenre" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unknown"
                android:id="@+id/tvGenre"
                android:maxLength="24"
                android:maxLines="2"
                android:textColor="#444444"
                android:textSize="13sp"
                android:layout_alignTop="@+id/tvLabelGenre"
                android:layout_toRightOf="@+id/tvLabelGenre"
                android:layout_toEndOf="@+id/tvLabelGenre"
                android:layout_marginLeft="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/owner"
                android:id="@+id/tvOwner"
                android:maxLength="24"
                android:maxLines="2"
                android:textColor="#444444"
                android:textSize="13sp"
                android:layout_alignStart="@+id/tvGenre"
                android:layout_alignLeft="@+id/tvGenre"
                android:layout_alignTop="@+id/tvLabelOwner" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/ivRespect"
                android:src="@drawable/mb_icon_unrespected"
                android:layout_above="@+id/tvRespectState"
                android:layout_alignLeft="@+id/tvRespectState"
                android:layout_alignStart="@+id/tvRespectState" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/tvRespectsCount"
                android:maxLength="24"
                android:maxLines="2"
                android:textColor="#158EC6"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_alignTop="@+id/ivRespect"
                android:layout_toRightOf="@+id/ivRespect"
                android:layout_marginTop="-10dp"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unrespected"
                android:id="@+id/tvRespectState"
                android:maxLength="24"
                android:maxLines="2"
                android:textColor="#222222"
                android:textSize="10sp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/songs"
                android:id="@+id/tvLabelSongs"
                android:maxLength="24"
                android:maxLines="2"
                android:textColor="#158EC6"
                android:textSize="13sp"
                android:layout_below="@+id/tvLabelOwner"
                android:layout_alignLeft="@+id/tvLabelOwner"
                android:layout_alignStart="@+id/tvLabelAlbums"
                android:layout_marginTop="5dp"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/tvSongsCount"
                android:maxLength="24"
                android:maxLines="2"
                android:textColor="#444444"
                android:textSize="13sp"
                android:layout_alignLeft="@+id/tvOwner"
                android:layout_alignTop="@+id/tvLabelSongs"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/year"
                android:id="@+id/tvLabelYear"
                android:maxLength="24"
                android:maxLines="2"
                android:textColor="#158EC6"
                android:textSize="13sp"
                android:visibility="visible"
                android:layout_below="@+id/tvLabelSongs"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unknown"
                android:id="@+id/tvYear"
                android:maxLength="24"
                android:maxLines="2"
                android:textColor="#444444"
                android:textSize="13sp"
                android:visibility="visible"
                android:layout_alignTop="@+id/tvLabelYear"
                android:layout_alignLeft="@+id/tvOwner"
                android:layout_alignStart="@+id/tvOwner" />

        </RelativeLayout>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbRating"
            android:layout_below="@+id/ivProfile"
            android:layout_alignLeft="@+id/ivProfile"
            android:layout_alignStart="@+id/ivProfile"
            android:progressBackgroundTint="#777777"
            android:progressTint="#DDDD00"
            android:numStars="5"
            android:stepSize="0.1"
            android:secondaryProgressTint="#777777"
            android:isIndicator="true"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_marginRight="20dp"
            android:minHeight="24dp"
            android:maxHeight="24dp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:id="@+id/tvRating"
            android:textColor="#158EC6"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_alignTop="@+id/rbRating"
            android:layout_toRightOf="@+id/rbRating"
            android:layout_toEndOf="@+id/rbRating" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_of_votes"
            android:id="@+id/tvTotalVotes"
            android:layout_below="@+id/rbRating"
            android:layout_alignLeft="@+id/ivProfile"
            android:layout_alignStart="@+id/ivProfile"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_marginTop="-5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_vote"
            android:id="@+id/tvMyVote"
            android:textSize="12sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:layout_below="@+id/tvTotalVotes"
            android:layout_alignLeft="@+id/tvTotalVotes"
            android:layout_alignParentEnd="false"
            android:textColor="#158EC6" />

        <RatingBar
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbMyRating"
            android:progressBackgroundTint="#777777"
            android:progressTint="#158EC6"
            android:numStars="5"
            android:stepSize="1"
            android:secondaryProgressTint="#777777"
            android:isIndicator="false"
            android:rating="0"
            android:visibility="gone"
            android:maxHeight="24dp"
            android:minHeight="24dp"
            android:layout_alignLeft="@+id/tvMyVote"
            android:layout_alignStart="@+id/tvMyVote"
            android:layout_below="@+id/tvMyVote"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp" />

    </RelativeLayout>

    <include layout="@layout/showbiz_media_members"
        android:layout_below="@+id/rlProfileHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/include" />

</RelativeLayout>
